html, body
  margin 0
  padding 0
  width 100%
  height 100%

body
  background-image url(../images/1.jpg)
  background-size cover
  background-position center
  font 14px 'helvetica'
  color #333333
  font-weight 500

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}
.fade-enter, .fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
}
